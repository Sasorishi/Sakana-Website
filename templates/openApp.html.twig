    <style>
        .logo {
            height: 30%;
            width: 50%;
        }

        .card {
            width: 85%;
            height: 70%;
            margin: 25% auto;
            border-radius: 16px;
            padding: 20px;
            background-color: #FFFFFF;
            border-color: #FFF9F0;
            font-family: 'Gilroy-Bold';
            color: #635C76;
            box-shadow: 2px 8px 15px 5px rgba(0,0,0,0.20);
        }

        .title {
            font-size: 22px;
            margin: 20px 0 30px 0;
        }

        .buttonFirst {
            background-Color: #fce8c9;
            width: 100%;
            height: 100%;
            display: flex;
            border-radius: 20px;
            justify-content: center;
            padding: 10px;
        }

        .buttonFirst:active {
            background-Color: #d9bf9a;
        }

        .buttonFirst > p {
            font-family: "Gelion-Medium";
            font-weight: 500;
            font-size: 18px;
            color: rgb(99, 92, 118);
        }

        .decline {
            display: flex;
            margin-top: 20px;
            justify-content: center;
        }

        .decline > p {
            font-family: "Gelion-Medium";
            font-weight: 500;
            font-size: 18px;
            color: rgb(193,193,193);
        }

        a:link {
            text-decoration: none;
        }
    </style>
</html>