        {% endblock %}

        <script src="https://kit.fontawesome.com/56694ff80d.js"></script>

    </head>
    
    <body class="footer-blog-background">
        <div id="hiddenBtn" class="card">
            <text class="title">Voulez-vous accéder à l'application mobile Sakana ?</text>
            {% if linkDownload != null %}
                <a id="url" href="{{ link }}" class="buttonFirst">
                    <p>Ouvrir l'application</p>
                </a>
                <a href="{{ linkDownload }}" class="decline">
                    <p>Télécharger l'application</p>
                </a>
            {% else %}
                <p>L'application n'est pas disponible sur cette plateforme</p>
            {% endif %}
        </div>

