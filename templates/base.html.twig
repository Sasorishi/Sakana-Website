<!DOCTYPE html>
<html>
    <head>
        <title>SAKANA</title>
        <meta name="google-site-verification" content="pecyhaNMkHMN4aZk8TLOyMwMK8Y_GhNyV_ipvtsKFFI" />
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">

        <meta property="og:title" content="Sakana">
        <meta property="og:image" content="../../img/preview.png">
        <meta property="og:description" content="L'application qui connecte les pratiquants et passionnés de sports dans le monde entier.">
        <meta property="og:url" content="https://sakanasport.com/">
        <meta name="twitter:card" content="summary_large_image">

        <link rel="icon" type="image/png" href="{{ asset('images/icons/logo.png') }}"/>

        {% block stylesheets %}
        {% endblock %}

        <script src="https://kit.fontawesome.com/56694ff80d.js"></script>
        
    </head>
    <body>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                    {{ message }}
            </div>
        {% endfor %}

        <nav class="navbar navbar-expand-lg navbar-background navbar-default sticky-top logo-brand">
            <a href="{{ path('home') }}" class="navbar-brand" href="#"><img src="../img/icons/icon-sakana.png" alt="logo-brand-sakana"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse navbar-text navbar-position">
                <div class="navbar-nav" id="top-menu">
                    <li class="active mr-3">
                        <a class="nav-item nav-link active navbar-text" href="#scroll-accueil">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="mr-3">
                        <a class="nav-item nav-link navbar-text" href="#scroll-vision">Notre vision</a>
                    </li>
                    <li class="mr-3">
                        <a class="nav-item nav-link navbar-text" href="#scroll-qui-sommes-nous">Qui sommes-nous ?</a>
                    </li>
                    <li class="mr-3">
                        <a class="nav-item nav-link navbar-text" href="#scroll-equipe">Notre équipe</a>
                    </li>
                    <li class="mr-3">
                        <a class="nav-item nav-link navbar-text" href="#scroll-contact">Contactez-nous</a>
                    </li>
                </div>
                <div class="navbar-nav">
                    <li class="mr-3" id="top-menu">
                        <a class="nav-item nav-link navbar-text" href="{{ path('blog') }}">Blog</a>
                    </li>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <footer id="sticky-footer" class="py-4 footer-background text-white-50">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 p-1">
                        <div class="text-center logo-brand">
                            <img src="../img/icons/icon-sakana-white.png" alt="logo-brand-sakana">
                        </div>
                    </div>

                    <div class="col-md-4 p-1">
                        <div class="text-center">
                            <small style="color: #E8E5F1">Copyright &copy; Sakana 2019 - 2023</small>
                        </div>
                    </div>

                    <div class="col-md-4 p-1">
                        <div class="fa align-items-center d-flex flex-column justify-content-center">
                            <ul class="list-unstyled list-inline ">
                                <li class="list-inline-item">
                                    <ul class="follow-us clearfix">
                                        <li><a href="https://www.facebook.com/Sakanasport/"><i class="fa-hover fab fa-facebook fa-lg"></i></a></li>
                                    </ul>
                                </li>
                                <li class="list-inline-item">
                                    <ul class="follow-us clearfix">
                                        <li><a href="https://www.instagram.com/sakanasport"><i class="fa-hover fab fa-instagram fa-lg"></i></a></li>
                                    </ul>
                                </li>
                                <li class="list-inline-item">
                                    <ul class="follow-us clearfix">
                                        <li><a href="https://www.linkedin.com/company/sakanasport/about/"><i class="fa-hover fab fa-linkedin fa-lg"></i></a></li>
                                    </ul>
                                </li>
                                <li class="list-inline-item">
                                    <ul class="follow-us clearfix">
                                        <li><a href="https://twitter.com/sakanasport"><i class="fa-hover fab fa-twitter fa-lg"></i></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
            <script src="assets\js\javascript.js" type="text/javascript"></script>         
        {% endblock %}

    </body>
</html>